{
  "name": "one-for-all",
  "private": true,
  "engines": {
    "node": ">=20.10"
  },
  "packageManager": "pnpm@8.14.0",
  "scripts": {
    "build": "turbo build",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo clean",
    "dev": "turbo dev --parallel",
    "format": "turbo format --continue -- --cache --cache-location node_modules/.cache/.prettiercache",
    "format:fix": "turbo format --continue -- --write --cache --cache-location node_modules/.cache/.prettiercache",
    "lint": "turbo lint --continue -- --cache-location node_modules/.cache/.eslintcache",
    "lint:fix": "turbo lint --continue -- --fix --cache-location node_modules/.cache/.eslintcache",
    "lint:ws": "pnpm dlx sherif@latest",
    "postinstall": "pnpm lint:ws",
    "typecheck": "turbo typecheck",
    "prepare": "husky install",
    "test": "pushd apps/web && pnpm test && popd && pushd apps/expo && pnpm test && popd && pushd packages/domain && pnpm test && popd && pushd packages/graphql && pnpm test && popd"

  },
  "devDependencies": {
    "@acme/prettier-config": "workspace:^",
    "@turbo/gen": "^1.13.0",
    "husky": "^8.0.0",
    "prettier": "^3.2.5",
    "turbo": "^1.13.0",
    "typescript": "^5.3.3"
  },
  "prettier": "@acme/prettier-config"
}
